<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Version>0.60.345.9</Version>
    <AssemblyVersion>0.50.345</AssemblyVersion>
    <FileVersion>0.50.345</FileVersion>
    <PlatformTarget>x64</PlatformTarget>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIconUrl>https://raw.githubusercontent.com/0xF6/ancient_cpu/master/Rune/resource/icon.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/0xF6/ancient_cpu</PackageProjectUrl>
    <RepositoryUrl>https://github.com/0xF6/ancient_cpu</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Yuuki Wesp</Authors>
    <Company>Ancient Project</Company>
    <Copyright>(C) 2019 Yuuki Wesp</Copyright>
  </PropertyGroup>
  <PropertyGroup Condition="$(Configuration) == 'Debug'">
    <BumpRevision>true</BumpRevision>
    <BumpLabelDigits>4</BumpLabelDigits>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Ivy.Versioning" Version="3.0.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <ProjectReference Include="..\Ancient.ProjectSystem\Ancient.ProjectSystem.csproj" />
    <ProjectReference Include="..\Ancient.Runtime.Hardware\Ancient.Runtime.Hardware.csproj" />
    <ProjectReference Include="..\Ancient.Runtime\Ancient.Runtime.csproj" />
  </ItemGroup>

</Project>
